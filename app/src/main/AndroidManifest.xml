        <activity
            android:name=".RegionList"
            android:label="@string/title_activity_region_list" >
        </activity>
        <activity
            android:name=".RegionDetail"
            android:label="@string/title_activity_region_detail" >
        </activity>
        <activity
            android:name=".Help"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name=".About"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name=".Glossary"
            android:label="@string/title_activity_glossary" >
